{
  "name": "personal-site",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "postinstall": "npm run build",
    "build": "tailwindcss -i ./src/css/input.css -o ./public/css/styles.css --minify",
    "start": "node src/server.js",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:server\"",
    "dev:css": "tailwindcss -i ./src/css/input.css -o ./public/css/styles.css --watch",
    "dev:server": "PORT=3000 nodemon src/server.js"
  },
  "dependencies": {
    "fastify": "^5.0.0",
    "@fastify/static": "^8.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "nodemon": "^3.0.0",
    "tailwindcss": "^3.4.0"
  }
}
